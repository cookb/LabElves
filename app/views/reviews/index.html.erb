<h2 style="color:green">Reviews for <%= @user.name %></h2>

<ul>
	<% @user.reviews_received.each do |review| %>
		<li><%= link_to "#{review.task.subject}, #{review.task.time_final.to_date}", review_url(review) %>
		<% if review.endorse %>
			&#x2605;
		<% end %>
		</li><br>
	<% end %>
</ul>

<% if @user.rating %>
	<h3 style="color:red">Endorsement Percent: <%= @user.rating * 100 %>%</h3>
<% end %>

<%= link_to "Reviews Authored", authored_reviews_url %>