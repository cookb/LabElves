<h2 style="color:green">Specialties for <%= @user.name %></h2>

<ul>
	<% @user.specialties.order("name ASC").each do |specialty| %>
		<li><%= link_to "#{specialty.name}", specialty_url(specialty) %></li>
		<% id = SpecJoin.find_by_user_id_and_spec_id(@user.id, specialty.id).id %>
		<%= button_to "Delete", spec_join_url(id), :data => { :confirm => "Are you sure you want to delete this skill?" }, 
				:method => :delete, :class => "btn btn-small btn-danger" %>
		<br>
	<% end %>
</ul>

<%= button_to "Add More Specialties", other_specialties_url, :method => :get, :class => "btn btn-large btn-primary" %><br>
<%= button_to "See All Specialties", all_specialties_url, :method => :get, :class => "btn btn-large btn-info" %>

	
